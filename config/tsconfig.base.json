{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ES6", "ES2015", "ESNext"]
  },
  "exclude": [
    "**/node_modules/**",
    "./packages/*/jest.config.js",
    "./packages/*/jest.config.CI.js",
    "./packages/*/gulpfile.js",
    "./packages/*/webpack.config.js",
    "./packages/*/dist/**",
    "./packages/*/lib/**",
    "./packages/*/coverage/**"
  ]
}
